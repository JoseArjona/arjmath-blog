---
const today = new Date();

import { SocialShare } from "astro-social-share";
---

<footer class="share">
  &copy; {today.getFullYear()} Arjmath.
  <SocialShare
    description="¡Mira este interesante blog de tecnología y desarrollo web! "
    title="Arjmath Blog - Blog de tecnología"
  />
</footer>
<style is:global>
  footer {
    padding: 2em 1em 1em 1em;
    color: rgb(var(--gray));
    text-align: center;
  }

  .share div {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 1rem;
  }

  .share div svg {
    width: 1.25rem;
    fill: #ffffff8e;
  }
</style>
